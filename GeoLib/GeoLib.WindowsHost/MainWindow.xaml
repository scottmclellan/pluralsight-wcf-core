<Window x:Class="GeoLib.WindowsHost.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="245.55" Width="474.256">
    <Grid Margin="0,0,0,-0.2" RenderTransformOrigin="0.5,0.5">
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="-0.228"/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.RenderTransform>
        <Button x:Name="btnStart" Content="Start" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Width="229" Height="133" Click="btnStart_Click"/>
        <Button x:Name="btnStop" Content="Stop" HorizontalAlignment="Left" Margin="234,10,-2,0" VerticalAlignment="Top" Width="229" Height="133" Click="btnStop_Click"/>
        <Label x:Name="lblMessage" HorizontalAlignment="Left" Margin="10,148,0,0" Height="60" Width="448" VerticalAlignment="Top"/>

    </Grid>
</Window>
